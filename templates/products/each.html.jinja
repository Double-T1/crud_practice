{% extends "layouts/base.html.jinja" %}


{% block content %}
<div>
    <h1>{{product.title}}</h1>
    <article>{{product.description|striptags}}</article>
    <p>{{product.price}}</p>

    <a href="{{url_for('products.edit', id=product.id)}}">edit this product</a>

    <form onSubmit="return confirm('you sure you want to delete this product?')" method="POST" action="{{url_for('products.each', id=product.id)}}">
        <button>delete this product</button>
    </form>

    <a href="{{url_for('products.index')}}">back to home page</a>
</div>
{% endblock content %}