{% extends "layouts/base.html.jinja" %}


{% block content %}
<div>
    <h1>here are the products</h1>
    <ul>
        {% for product in products %}
            <a href="{{url_for('products.each', id=product.id)}}">
                <li>
                    <h3>{{product.title}}</h3>
                    <p>{{product.description|striptags|truncate(50)}}</p>
                    <p>{{product.price}}</p>
                </li>
            </a>
        {% endfor %}
    </ul>
    <a href="{{url_for('products.add')}}">add a new product</a>
</div>
{% endblock content %}